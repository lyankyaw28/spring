<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- sample_spring_app -->
	<bean id="studentbean" class="main.sample_spring_app.Student">
		<property name="name" value="Vimal Jaiswal"></property>
	</bean>
	<!-- ***************************************************************************************** -->
	<!-- sample_spring_app -->
	<bean id="intConstructorDenpendencyInjection"
		class="main.dependency_injection.constructor_injection.Employee">
		<constructor-arg value="10" type="int"></constructor-arg>
	</bean>

	<bean id="stringConstructorDenpendencyInjection"
		class="main.dependency_injection.constructor_injection.Employee">
		<constructor-arg value="10"></constructor-arg>
	</bean>

	<bean id="string2ConstructorDenpendencyInjection"
		class="main.dependency_injection.constructor_injection.Employee">
		<constructor-arg value="Sonoo"></constructor-arg>
	</bean>

	<bean id="bothConstructorDenpendencyInjection"
		class="main.dependency_injection.constructor_injection.Employee">
		<constructor-arg value="10" type="int"></constructor-arg>
		<constructor-arg value="Sonoo"></constructor-arg>
	</bean>
	<!-- ************************************************************************************* -->
	<!-- constructor_dependency_injection -->
	<bean id="dependentSubObject"
		class="main.dependency_injection.constructor_injection_dependent_obj.Address">
		<constructor-arg value="ghaziabad"></constructor-arg>
		<constructor-arg value="UP"></constructor-arg>
		<constructor-arg value="India"></constructor-arg>
	</bean>

	<bean id="dependentMainObject"
		class="main.dependency_injection.constructor_injection_dependent_obj.Employee">
		<constructor-arg value="12" type="int"></constructor-arg>
		<constructor-arg value="Sonoo"></constructor-arg>
		<constructor-arg>
			<!-- sub class ရဲ႕ id -->
			<ref bean="dependentSubObject" />
		</constructor-arg>
	</bean>
	<!-- ******************************************************************************************* -->
	<!-- constructor_injection_collection -->
	<bean id="injectionCollection" class="main.dependency_injection.constructor_injection_collection.Question">
		<constructor-arg value="111"></constructor-arg>
		<constructor-arg value="What is java?"></constructor-arg>
		<constructor-arg>
			<list>
				<value>Java is a programming language</value>
				<value>Java is a Platform</value>
				<value>Java is an Island of Indonasia</value>
			</list>
		</constructor-arg>
	</bean>
</beans>